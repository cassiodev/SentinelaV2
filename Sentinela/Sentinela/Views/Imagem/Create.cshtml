@model Sentinela.Models.Imagem

@{
    ViewBag.Title = "Create";
}

<h2>Novo</h2><br/>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Imagem</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.LocalId, "Local")
        </div>
        <div class="editor-field">
            @Html.DropDownList("LocalId", String.Empty)
            @Html.ValidationMessageFor(model => model.LocalId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProdutoId, "Cardapio")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ProdutoId", String.Empty)
            @Html.ValidationMessageFor(model => model.ProdutoId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Url)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Url)
            @Html.ValidationMessageFor(model => model.Url)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.principal)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.principal)
            @Html.ValidationMessageFor(model => model.principal)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
