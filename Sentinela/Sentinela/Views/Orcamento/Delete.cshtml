@model Sentinela.Models.Orcamento

@{
    ViewBag.Title = "Delete";
}

<h2>Excluir</h2>

@if (Model.Evento.Any())
{
    <h4>Não é possível excluir este orçamento, pois ele está vinculado com um ou mais eventos</h4>
    <p>
            @Html.ActionLink("Voltar", "Index")
        </p>
}
else
{
    
    <h3>Tem certeza que deseja excluir este registro?</h3><br/><br/>
    <fieldset>
        <legend>Orcamento</legend>

        <div class="display-label">
             @Html.DisplayNameFor(model => model.Cliente.Logradouro):
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Cliente.Logradouro)
        </div><br/>

        <div class="display-label">
             @Html.DisplayNameFor(model => model.Local.Nome):
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Local.Nome)
        </div><br/>

        <div class="display-label">
             @Html.DisplayNameFor(model => model.DataOrcamento):
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.DataOrcamento)
        </div><br/>

        <div class="display-label">
             @Html.DisplayNameFor(model => model.DataEvento):
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.DataEvento)
        </div><br/>

        <div class="display-label">
             @Html.DisplayNameFor(model => model.DataAlteracao):
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.DataAlteracao)
        </div><br/>

        <div class="display-label">
             @Html.DisplayNameFor(model => model.Situacao):
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Situacao)
        </div><br/>

        <div class="display-label">
             @Html.DisplayNameFor(model => model.Convidados):
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Convidados)
        </div><br/>

        <div class="display-label">
             @Html.DisplayNameFor(model => model.Periodo):
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Periodo)
        </div><br/>

        <div class="display-label">
             @Html.DisplayNameFor(model => model.TipoEvento.TipoEventoId):
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.TipoEvento.TipoEventoId)
        </div><br/>

        <div class="display-label">
             @Html.DisplayNameFor(model => model):
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model)
        </div><br/>
    </fieldset>
    using (Html.BeginForm()) {
        
        <p>
            @Html.AntiForgeryToken()
            <input type="submit" value="Excluir" /> |
            @Html.ActionLink("Voltar", "Index")
        </p>
    }    
}
