@model Sentinela.Models.TipoEvento

@{
    ViewBag.Title = "Delete";
}

<h2>Excluir</h2>
@if (Model.Evento.Any() || Model.Agenda.Any())
{
    <h4>Não é possível excluir este tipo, pois ele está vinculado com um ou mais eventos ou orçamentos</h4>
    <p>
        @Html.ActionLink("Voltar", "Index")
    </p>
}
else
{
    <h3>Tem certeza que deseja excluir este registro?</h3><br/><br/>
    <fieldset>
        <legend>Tipo Evento</legend>

        <div class="display-label">
             @Html.DisplayNameFor(model => model.Nome):
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Nome)
        </div><br/>
    </fieldset>
    using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <p>
            <input type="submit" value="Excluir" /> |
            @Html.ActionLink("Voltar", "Index")
        </p>
    }
}