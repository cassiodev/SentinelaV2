@model Sentinela.Models.Cidade

@{
    ViewBag.Title = "Excluir Cidade";
}

<h2>Excluir </h2>
    @if (Model.Cliente.Any() || Model.Local.Any())
    {
        <h4>Não é possivel excluir esta cidade pois existem Clientes ou Cidades vinculados a ele.</h4>
        <p>
            @Html.ActionLink("Voltar", "Index")
        </p>
    }
    else
    {
    <h3>Tem certeza que deseja excluir este registro?</h3><br/><br/>
    <fieldset>
        <legend>Cidade</legend>

        <div class="display-label">
             @Html.DisplayNameFor(model => model.Nome):
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Nome)
        </div><br/>

        <div class="display-label">
             @Html.DisplayNameFor(model => model.Estado.UF):
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Estado.UF)
        </div><br/>
    </fieldset>
    using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <p>
            <input type="submit" value="Excluir" /> |
            @Html.ActionLink("Voltar", "Index")
        </p>
    }
}
