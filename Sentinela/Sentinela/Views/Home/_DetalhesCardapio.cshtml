@model Sentinela.Models.Cardapio

<style>
    .fotos-container a img {
        display: block;
        margin-bottom: 4px;
        max-width: 200px;
        max-height: 100px;
        vertical-align: top;
    }
    .fotos-container a{
        display:inline-block;
    }
</style>
<fieldset>
    <legend>Refeições</legend>

    @foreach (Sentinela.Controllers.ViewRefeicao refeicao in ViewBag.Refeicoes)
    {
        <p>
            <b>@refeicao.Refeicao</b>:
            <span>
            @refeicao.Itens
            </span>

        </p>
    }
</fieldset>
<fieldset>
    <legend>Fotos</legend>
    <p class="fotos-container">
        @foreach (Sentinela.Models.Imagem item in Model.Imagem)
        {
            <a class="fancybox-thumb" rel="fancybox-thumb" href="@item.Url" title="">
	            <img src="@item.Url" alt="" />
            </a>
        }
    </p>

</fieldset>

<script>
    $(document).ready(function () {
        $(".fancybox-thumb").fancybox({
            prevEffect: 'none',
            nextEffect: 'none',
            helpers: {
                title: {
                    type: 'outside'
                },
                thumbs: {
                    width: 50,
                    height: 50
                }
            }
        });
        console.log($(".fancybox-thumb"));
    });
</script>