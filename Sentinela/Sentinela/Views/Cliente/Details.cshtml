@model Sentinela.Models.Cliente

@{
    ViewBag.Title = "Details";
}

<h2>Detalhes</h2>

<fieldset>
    <legend>Cliente</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Cidade.Nome)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Cidade.Nome)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Logradouro)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Logradouro)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Numero)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Numero)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Cpf)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Cpf)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Celular)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Celular)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Telefone)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Telefone)
    </div>
</fieldset>

<fieldset>
    <legend>Orçamentos Cadastrados</legend>
    <h2>Orçamentos Cadastrados</h2>
    @foreach (var item in Model.Orcamento)
    {
        <div class="display-label">
            Data Cadastro
        </div>
        <div class="display-field">
            @item.DataOrcamento.ToShortDateString()
        </div>
        <div class="display-label">
            Código
        </div>
        <div class="display-field">
            <a href="/Orcamento/Details/@item.OrcamentoId">@item.OrcamentoId</a>
        </div>
    }

</fieldset>

    <p>
        @Html.ActionLink("Editar", "Edita", new { id = Model.ClienteId }) |
        @Html.ActionLink("Voltar", "Index")
    </p>
